- form_for @user do |f|
  = f.error_messages
  %p
    = f.label I18n.t :name
    %br= f.text_field :name
  %p
    = f.label I18n.t :email
    %br= f.text_field :email
  %p
    = f.label I18n.t :username
    %br= f.text_field :username
  %p  
    = f.label I18n.t :password
    %br= f.password_field :password
  %p
    = f.label I18n.t :password_confirmation
    %br= f.password_field :password_confirmation

  %p= submit_tag(I18n.t 'register')
