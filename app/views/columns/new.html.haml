%h1= I18n.t(:new) + I18n.t(:column)
= link_to(I18n.t(:back), @table)
- form_for(@column) do |f|
  %p
    = f.label I18n.t :name
    %br= f.text_field :name
    %br
    %br= f.label I18n.t :type
    %br= f.text_field :column_type
    %br
    %br= f.label I18n.t :null_column
    %br= f.text_field :null
    = f.hidden_field :table_id
  %p= submit_tag(I18n.t(:addacolumn))


